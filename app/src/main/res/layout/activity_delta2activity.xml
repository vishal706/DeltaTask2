<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".delta2activity"
    android:background="@drawable/android3"
    android:gravity="fill_horizontal|center_vertical|center_horizontal|fill|clip_vertical|fill_vertical|center|start|clip_horizontal|bottom|left|right|end|top">


    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listView" />
    <ToggleButton
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/toggleButton"
        android:checked="false"
        android:onClick="OnToggling"
        android:textOff="Ascending"
        android:textOn="Descending"
        android:layout_alignTop="@+id/listView"
        android:layout_alignEnd="@+id/listView"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="true"
        android:textSize="20dp"
        android:background="#ffff"
        android:textStyle="italic" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Enter the contact to be found"
        android:textSize="40dp"
        android:textColor="#ffff"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_alignBottom="@+id/listView"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="#000"
        android:layout_alignWithParentIfMissing="false"
        android:layout_toStartOf="@+id/toggleButton" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:onClick="OnSearching"
        android:layout_alignParentEnd="true"
        android:text="Search"
        android:textSize="18dp"
        android:layout_toEndOf="@+id/editText"
        android:textStyle="bold|italic" />

</RelativeLayout>
